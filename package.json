{
  "name": "electron-react-course",
  "author": {
    "name": "nephh"
  },
  "description": "Learning Electron + React ",
  "private": true,
  "version": "0.0.0",
  "main": "dist-electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "npm-run-all -p dev:react dev:electron",
    "dev:react": "vite",
    "dev:electron": "pnpm build:electron && cross-env NODE_ENV=development electron .",
    "build": "tsc -b && vite build",
    "build:electron": "tsc --project src/electron/tsconfig.json",
    "lint": "eslint .",
    "preview": "vite preview",
    "dist:win": "pnpm build:electron && pnpm build && electron-builder --win --x64",
    "dist:mac": "pnpm build:electron && pnpm build && electron-builder --mac --arm64",
    "dist:linux": "pnpm build:electron && pnpm build && electron-builder --linux --x64"
  },
  "dependencies": {
    "os-utils": "^0.0.14",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "recharts": "^3.3.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/node": "^24.6.0",
    "@types/os-utils": "^0.0.4",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.4",
    "cross-env": "^10.1.0",
    "electron": "^38.2.2",
    "electron-builder": "^26.0.12",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "globals": "^16.4.0",
    "npm-run-all": "^4.1.5",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.45.0",
    "vite": "^7.1.7"
  }
}
